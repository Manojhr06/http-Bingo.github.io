<body>

  <h1>Create Game</h1>
  <div class="input-group">
    <input type="text" id="playerName" placeholder="Enter your name" />
    <button onclick="createServer()">Create New Server</button>
  </div>

  <div id="serverLink" style="margin-top: 20px;"></div>

  <h1>Join the Game</h1>
  <div class="join-group">
    <input type="text" id="joinPlayerName" placeholder="Enter your name" />
    <button onclick="joinGame()">Join Game</button>
  </div>

  <script>
    function generateUniqueLink() {
      const uniqueId = Math.random().toString(36).substring(2, 10);
      return https://yourgame.com/join/${uniqueId};
    }

    function createServer() {
      const name = document.getElementById('playerName').value;

      if (!name) {
        alert("Please enter your name.");
        return;
      }

      const serverURL = generateUniqueLink();
      document.getElementById('serverLink').innerHTML = `
        <h3>Server Created!</h3>
        <p>Share this link with up to 3 friends (4 players max):</p>
        <input type="text" value="${serverURL}" readonly style="width: 80%; padding: 10px; background-color: #2a2a40; color: #fff; border: none; border-radius: 8px;" />
      `;

      console.log(Game created by ${name}. Server URL: ${serverURL});
    }

    function joinGame() {
      const name = document.getElementById('joinPlayerName').value;
      const sessionId = window.location.pathname.split('/').pop();

      if (!name) {
        alert("Please enter your name.");
        return;
      }

      alert(Joining game: ${sessionId} as ${name});
      // Connection logic or WebSocket here
    }
  </script>
